<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0B4081"
    tools:context=".authentication.profile_creation.ProfileCreationSuccess">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center|bottom"
            android:paddingVertical="54dp"
            android:background="@drawable/success_image_3"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="87dp"
                    android:layout_height="87dp"
                    android:src="@drawable/sucess1"/>
                <TextView
                    android:id="@+id/txt_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="Hey Shubham!"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulish"
                    android:gravity="center"
                    android:text="Your Profile Has Been Successfully Created! "
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/profile_sucess_bg"
            android:paddingHorizontal="13dp"
            android:gravity="center"
            android:paddingVertical="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sucess_badge"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="Yay! Get ready to take your first test."
                android:textColor="@color/secondary"
                android:textSize="25sp" />


            <Button
                android:id="@+id/button_start_test"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/button_lg_1"
                android:elevation="0dp"
                android:fontFamily="@font/mulish_semibold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:includeFontPadding="false"
                android:paddingHorizontal="22dp"
                android:text="Continue" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>