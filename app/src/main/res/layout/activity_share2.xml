<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:fontFamily="@font/poppins_medium"
    android:id="@+id/main_layout"
    android:paddingHorizontal="18dp"
    android:background="@color/white"
    android:paddingVertical="30dp"
    tools:context=".share.Share2">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/respyr_logo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_score"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:src="@drawable/pancreas"
            />
        <TextView
            android:id="@+id/txt_name_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diabetes SCORE"
            android:textAllCaps="true"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_25sdp"
            android:includeFontPadding="false"
            tools:ignore="PrivateResource" />

        <TextView
            android:id="@+id/txt_value_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="86"
            android:textAllCaps="false"
            android:textSize="@dimen/_52ssp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_10sdp"
            android:includeFontPadding="false"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_33sdp">
            <TextView
                android:id="@+id/txt_current_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:drawablePadding="5dp"
                android:textAllCaps="false"
                android:gravity="center"
                android:text="Wed, 12 Aug 2022"
                android:fontFamily="@font/roboto"
                android:includeFontPadding="false"
                android:textColor="@color/grey"
                app:drawableStartCompat="@drawable/cal_sm"
                tools:ignore="SmallSp" />
            <Space
                android:layout_width="15dp"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/txt_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:drawablePadding="5sp"
                android:textAllCaps="false"
                android:gravity="center"
                android:text="12:04pm"
                android:fontFamily="@font/roboto"
                android:includeFontPadding="false"
                android:textColor="@color/grey"
                app:drawableStartCompat="@drawable/clock_sm"
                tools:ignore="SmallSp" />
        </LinearLayout>



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:background="@color/grey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_score_status"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/thumb11"
            />
        <TextView
            android:id="@+id/txt_score_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep it up, Shubham!"
            android:textAllCaps="false"
            android:textSize="@dimen/_15ssp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_34sdp"
            android:includeFontPadding="false"
            tools:ignore="PrivateResource" />

        <TextView
            android:id="@+id/txt_score_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="255dp"
            android:text="Your diabetes risk level is low which is great! Letâ€™s continue to track your lifestyle to maintain it."
            android:textAllCaps="false"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/mulish"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_34sdp"
            android:includeFontPadding="false"
            />





    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish"
            android:includeFontPadding="false"
            android:text="Download the respyr app\nNOW!"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp" />
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/playstore"
            android:scaleType="fitEnd"
            android:layout_height="@dimen/_18sdp"/>
    </LinearLayout>

</LinearLayout>