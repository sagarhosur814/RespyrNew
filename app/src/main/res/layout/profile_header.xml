<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:paddingHorizontal="29dp"
        android:gravity="center"
        android:background="@drawable/profile_header_1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_user_avtar"
                android:layout_width="@dimen/_56sdp"
                android:layout_height="@dimen/_56sdp"
                android:background="@drawable/eclips1"
                android:backgroundTint="@color/profile2"
                android:src="@drawable/profile_av1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingHorizontal="22dp">

            <TextView
                android:id="@+id/txt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Name"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_15sdp"
                android:includeFontPadding="false"
                android:textColor="@color/grey"/>
            <TextView
                android:id="@+id/txt_user_gender_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/_8sdp"
                android:layout_marginTop="5dp"
                android:includeFontPadding="false"
                android:textColor="@color/grey"/>
            <TextView
                android:id="@+id/txt_email_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/_8sdp"
                android:layout_marginTop="5dp"
                android:includeFontPadding="false"
                android:textColor="@color/primary"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/button_change_profile"
                android:layout_width="@dimen/_41sdp"
                android:layout_height="@dimen/_41sdp"
                android:background="@color/transparent"
                android:src="@drawable/multiple_account_main"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:gravity="center"
        android:layout_marginTop="26dp"
        android:paddingHorizontal="29dp"
        android:background="@drawable/profile_premium">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CURRENT PLAN"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="11sp"
                android:textAllCaps="true"
                android:includeFontPadding="false"
                android:textColor="@color/primary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signup Plan"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:includeFontPadding="false"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|end">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:text="Try Premium"
                android:background="@drawable/premium_button1"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:fontFamily="@font/mulish"
                android:paddingHorizontal="11dp"
                android:drawablePadding="6.5dp"
                android:textColor="#FFE78C00"
                android:drawableLeft="@drawable/premium_sm1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>