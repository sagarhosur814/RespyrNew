<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profile.user.PersonalInformation">

  <com.google.android.material.appbar.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:translationZ="0dp"
      android:elevation="0dp"
      android:background="@color/transparent"
      android:stateListAnimator="@null">
    <LinearLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#308BF9"
        android:paddingHorizontal="13dp">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingVertical="14dp"
          android:gravity="center"
          android:orientation="horizontal">
        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/toolbar_back"
            android:background="@color/transparent"
            app:tint="@color/white" />
        <View
            android:layout_width="46dp"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/txtPageTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Personal Info"
            android:textSize="15sp"
            android:gravity="center"
            android:fontFamily="@font/poppins_semibold"
            android:includeFontPadding="false"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/button_save"
            android:layout_width="78dp"
            android:layout_height="37dp"
            android:paddingHorizontal="20dp"
            android:background="@drawable/rectangle_15rad"
            android:backgroundTint="@color/white"
            android:textSize="15sp"
            android:gravity="center"
            android:fontFamily="@font/poppins_semibold"
            android:textAllCaps="false"
            android:elevation="8dp"
            android:textColor="#C7C6CE"
            android:text="Save"/>
      </LinearLayout>

    </LinearLayout>
  </com.google.android.material.appbar.AppBarLayout>

  <ScrollView
      android:id="@+id/scrollview"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingHorizontal="13dp"
          android:gravity="center"
          android:background="@drawable/profile_bg"
          android:paddingVertical="23dp">



        <LinearLayout
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:backgroundTint="#99E37F"
            android:gravity="center"
            android:background="@drawable/eclips1">
          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_male"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@drawable/eclips1"
            android:backgroundTint="@color/white"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:textColor="@color/primary"
            android:fontFamily="@font/mulish"
            android:paddingHorizontal="35dp"
            android:layout_marginTop="30dp"
            android:text="Update Profile Photo"/>

      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:orientation="vertical"
          android:paddingHorizontal="19dp"
          android:paddingVertical="25dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:paddingHorizontal="11dp"
            android:gravity="center"
            android:background="@drawable/profile_edit_text_bg">

          <ImageView
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:src="@drawable/ic_user1"/>
          <View
              android:layout_width="9dp"
              android:layout_height="0dp"/>
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/black"
                android:fontFamily="@font/mulish"
                android:textSize="10sp"/>
            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginTop="7dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:textSize="15dp"
                android:background="@color/transparent"/>
          </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:paddingHorizontal="11dp"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/profile_edit_text_bg">

          <ImageView
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:src="@drawable/ic_gender1"/>
          <View
              android:layout_width="9dp"
              android:layout_height="0dp"/>
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sex"
                android:textColor="@color/black"
                android:fontFamily="@font/mulish"
                android:textSize="10sp"/>

            <RadioGroup
                android:id="@+id/tab1"
                android:layout_width="262dp"
                android:layout_height="47dp"
                android:orientation="horizontal"
                android:padding="6dp"
                android:gravity="center"
                android:layout_marginTop="11dp"
                android:background="@drawable/tab_outline_2">

              <RadioButton
                  android:id="@+id/yes"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:background="@drawable/gender_tab"
                  android:button="@color/transparent"
                  android:checked="true"
                  android:drawableLeft="@drawable/check_2"
                  android:fontFamily="@font/mulish"
                  android:gravity="center"
                  android:paddingHorizontal="22dp"
                  android:text="Yes"
                  android:textColor="@color/black"
                  android:textSize="15sp" />

              <RadioButton
                  android:id="@+id/no"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:background="@drawable/gender_tab"
                  android:gravity="center"
                  android:layout_weight="1"
                  android:drawableLeft="@drawable/check_2"
                  android:checked="true"
                  android:textColor="@color/white"
                  android:paddingHorizontal="22dp"
                  android:fontFamily="@font/mulish"
                  android:textSize="15sp"
                  android:button="@color/transparent"
                  android:text="No"/>

            </RadioGroup>

          </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:paddingHorizontal="11dp"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/profile_edit_text_bg">

          <ImageView
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:src="@drawable/ic_date_of_birth1"/>
          <View
              android:layout_width="9dp"
              android:layout_height="0dp"/>
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOB"
                android:textColor="@color/black"
                android:fontFamily="@font/mulish"
                android:textSize="10sp"/>
            <EditText
                android:id="@+id/et_user_date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginTop="7dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:textSize="15dp"
                android:background="@color/transparent"/>
          </LinearLayout>
          <ImageButton
              android:id="@+id/button_date_picker"
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:background="@color/transparent"
              android:src="@drawable/ic_calender"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:paddingHorizontal="11dp"
            android:gravity="center"
            android:backgroundTint="#E6E6E6"
            android:layout_marginTop="25dp"
            android:background="@drawable/profile_edit_text_bg">

          <ImageView
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:src="@drawable/ic_age1"/>
          <View
              android:layout_width="9dp"
              android:layout_height="0dp"/>
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textColor="@color/black"
                android:fontFamily="@font/mulish"
                android:textSize="10sp"/>
            <EditText
                android:id="@+id/et_user_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginTop="7dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:textSize="15dp"
                android:enabled="false"
                android:background="@color/transparent"/>
          </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:paddingHorizontal="11dp"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/profile_edit_text_bg">

          <ImageView
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:src="@drawable/ic_height1"/>
          <View
              android:layout_width="9dp"
              android:layout_height="0dp"/>
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textColor="@color/black"
                android:fontFamily="@font/mulish"
                android:textSize="10sp"/>
            <EditText
                android:id="@+id/et_user_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginTop="7dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:textSize="15dp"
                android:background="@color/transparent"/>
          </LinearLayout>
          <RadioGroup
              android:id="@+id/radio_group_height"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radio_button_cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cm" />
            <RadioButton
                android:id="@+id/radio_button_feet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="inches" />
          </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:paddingHorizontal="11dp"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/profile_edit_text_bg">

          <ImageView
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:src="@drawable/ic_weight1"/>
          <View
              android:layout_width="9dp"
              android:layout_height="0dp"/>
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textColor="@color/black"
                android:fontFamily="@font/mulish"
                android:textSize="10sp"/>
            <EditText
                android:id="@+id/et_user_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginTop="7dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:textSize="15dp"
                android:background="@color/transparent"/>


          </LinearLayout>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="kilogram (kg)"
              android:textColor="@color/black"
              android:fontFamily="@font/mulish"
              android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:paddingHorizontal="11dp"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/profile_edit_text_bg">

          <ImageView
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:src="@drawable/ic_water1"/>
          <View
              android:layout_width="9dp"
              android:layout_height="0dp"/>
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water Consumption"
                android:textColor="@color/black"
                android:fontFamily="@font/mulish"
                android:textSize="10sp"/>
            <EditText
                android:id="@+id/et_user_water_consumption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginTop="7dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:textSize="15dp"
                android:background="@color/transparent"/>
          </LinearLayout>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Liters"
              android:textColor="@color/black"
              android:fontFamily="@font/mulish"
              android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:paddingHorizontal="11dp"
            android:gravity="center"
            android:backgroundTint="#E6E6E6"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/profile_edit_text_bg">

          <ImageView
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:src="@drawable/ic_bmi1"/>
          <View
              android:layout_width="9dp"
              android:layout_height="0dp"/>
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMI"
                android:textColor="@color/black"
                android:fontFamily="@font/mulish"
                android:textSize="10sp"/>
            <EditText
                android:id="@+id/et_user_bmi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginTop="7dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:textSize="15dp"
                android:enabled="false"
                android:background="@color/transparent"/>
          </LinearLayout>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="in kg/m2"
              android:textColor="@color/black"
              android:fontFamily="@font/mulish"
              android:textSize="12sp"/>

        </LinearLayout>

      </LinearLayout>
    </LinearLayout>
  </ScrollView>

</LinearLayout>