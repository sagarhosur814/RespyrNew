<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/white"
    tools:context=".authentication.login.newuser.bloodtest.Condtions">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/user_profile_create_progress5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_13sdp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_12sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:text="MEDICAL HISTORY"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/_10sdp" />
                            <include layout="@layout/user_profile_dots"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:text="Are you suffering from any of the following conditions ?"
                            android:layout_marginTop="@dimen/_37sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/mulish"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_10sdp"
                            android:text="This is used to get accurate health status"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/_56sdp"
                        android:layout_marginBottom="20dp">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <CheckBox
                                android:id="@+id/chk_none"
                                android:layout_width="wrap_content"
                                android:button="@drawable/chk_condition"
                                android:layout_height="wrap_content"/>
                            <Space
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="0dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/mulish"
                                android:includeFontPadding="false"
                                android:text="None"
                                android:drawablePadding="@dimen/_8sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">
                            <CheckBox
                                android:id="@+id/chk_dia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@drawable/chk_condition"
                             />
                            <Space
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="0dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/mulish"
                                android:includeFontPadding="false"
                                android:text="Diabetes"
                                android:drawablePadding="@dimen/_8sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">

                            <CheckBox
                                android:id="@+id/chk_lungs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@drawable/chk_condition"/>

                            <Space
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="0dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/mulish"
                                android:includeFontPadding="false"
                                android:text="Lung Issues"
                                android:drawablePadding="@dimen/_8sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">
                            <CheckBox
                                android:id="@+id/chk_lipid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@drawable/chk_condition"/>
                            <Space
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="0dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/mulish"
                                android:includeFontPadding="false"
                                android:text="Lipid issues"
                                android:drawablePadding="@dimen/_8sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">
                            <CheckBox
                                android:id="@+id/chk_kidney"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@drawable/chk_condition"/>
                            <Space
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="0dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/mulish"
                                android:includeFontPadding="false"
                                android:text="Kidney Issues"
                                android:drawablePadding="@dimen/_8sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">
                            <CheckBox
                                android:id="@+id/chk_liver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@drawable/chk_condition"/>
                            <Space
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="0dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/mulish"
                                android:includeFontPadding="false"
                                android:text="Liver Issues"
                                android:drawablePadding="@dimen/_8sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"/>
                        </LinearLayout>











                    </LinearLayout>


                </LinearLayout>



            </ScrollView>


        </LinearLayout>
    </LinearLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E4F0FF"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        android:layout_height="@dimen/_60sdp"
        tools:ignore="PrivateResource">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="start|center"
            android:layout_height="match_parent"
            android:paddingHorizontal="13dp">
            <Button
                android:id="@+id/button_back"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_40sdp"
                android:includeFontPadding="false"
                android:text="Back"
                android:paddingHorizontal="22dp"
                android:drawableStart="@drawable/ic_back"
                android:drawableTint="@color/black"
                android:elevation="0dp"
                android:fontFamily="@font/mulish_semibold"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:background="@color/transparent"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button_next"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/button_small_1"
                android:drawableRight="@drawable/ic_next"
                android:drawableTint="@color/white"
                android:elevation="0dp"
                android:fontFamily="@font/mulish_semibold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:includeFontPadding="false"
                android:paddingHorizontal="22dp"
                android:text="Next" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>