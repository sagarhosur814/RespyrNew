<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    android:background="@drawable/bottom_sheet_shape"
    android:paddingHorizontal="18dp"
    android:paddingVertical="25dp"
    tools:ignore="PrivateResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="24dp"
                android:layout_height="5dp"
                android:backgroundTint="@color/black"
                android:layout_gravity="center"
                android:background="@drawable/eclips1" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/connection_icon"
                android:layout_marginTop="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Issue With Connection"
                android:textSize="@dimen/_20sdp"
                android:textColor="#252525"
                android:fontFamily="@font/poppins_semibold"
                android:textAllCaps="false"
                android:includeFontPadding="false"
                android:layout_marginTop="19sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Solution"
                android:textSize="@dimen/_10sdp"
                android:textColor="#3FAF58"
                android:textAllCaps="false"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/_50sdp"
                android:fontFamily="@font/poppins_semibold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turn on OTG connection and try again"
                android:textSize="@dimen/_10sdp"
                android:textColor="#535359"
                android:includeFontPadding="false"
                android:fontFamily="@font/mulish_semibold"
                android:layout_marginTop="10sp"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="243dp"
        android:layout_height="137dp"
        android:layout_marginTop="10dp">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/otg_connection"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">
        <LinearLayout
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_change_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Go to Setting > Search for OTG in phone  settings"
                android:textColor="#535359"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/mulish_semibold"
                android:textAllCaps="false"
                android:includeFontPadding="false"/>

            <TextView
                android:id="@+id/txt_change_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Turn On OTG connection"
                android:textColor="#535359"
                android:textSize="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/mulish_semibold"
                android:textAllCaps="false"
                android:includeFontPadding="false" />


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginTop="36dp">
        <Button
            android:id="@+id/button_go_to_settings"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:text="Go To Setting"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/primary"
            android:textAllCaps="false"
            android:fontFamily="@font/mulish_semibold"
            android:drawableEnd="@drawable/arrow_right1"
            android:drawableTint="@color/primary"
            android:layout_gravity="center"
            android:drawablePadding="20dp"
            android:background="@color/transparent"
            android:includeFontPadding="false" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:backgroundTint="#D9D9D9"
        android:layout_marginTop="20dp"
        android:layout_height="1dp"/>

    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Still having issue with connection"
            android:textColor="#535359"
            android:textSize="@dimen/_10sdp"
            android:textAllCaps="false"
            android:includeFontPadding="false"
            android:fontFamily="@font/mulish"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/eclips1"
        android:backgroundTint="@color/primary"
        android:layout_marginTop="22dp"
        android:padding="1px">
        <Button
            android:id="@+id/button_contact_spport"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Contact Support"
            android:textSize="@dimen/_10sdp"
            android:textAllCaps="false"
            android:textColor="#308BF9"
            android:fontFamily="@font/mulish"
            android:background="@drawable/eclips1"
            android:backgroundTint="@color/white"
            android:includeFontPadding="false"/>
    </LinearLayout>
</LinearLayout>