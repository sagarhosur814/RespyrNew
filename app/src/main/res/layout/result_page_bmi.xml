<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#E4F0FF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="30dp"
        android:background="@color/white"
        android:paddingHorizontal="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMI ANALYSIS"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:fontFamily="@font/poppins_semibold"
            android:includeFontPadding="false"
            android:textColor="@color/primary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See your bmi score based on your physical parameter. For an accurate analysis, track everyday."
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/mulish"
            android:includeFontPadding="false"
            android:textColor="@color/grey"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="34dp">

            <ImageView
                android:id="@+id/result_page_image_bmi"
                android:layout_width="299dp"
                android:layout_height="160dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/bmi1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/result_page_txt_profile_name_bmi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/mulish"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"/>
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="24dp">
                 <TextView
                     android:id="@+id/result_page_txt_value_bmi"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="-"
                     android:textSize="40sp"
                     android:gravity="center"
                     android:fontFamily="@font/roboto_bold"
                     android:includeFontPadding="false"
                     android:textColor="@color/black"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Kg/m2"
                     android:textSize="12sp"
                     android:gravity="center"
                     android:fontFamily="@font/mulish"
                     android:includeFontPadding="false"
                     android:textColor="@color/black"/>
             </LinearLayout>
                <TextView
                    android:id="@+id/result_page_txt_suggestion1_bmi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginTop="24sp"
                    android:fontFamily="@font/mulish"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/result_page_txt_bmi_meaning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:background="@drawable/eclips1"
                    android:backgroundTint="@color/under_weight"
                    android:paddingHorizontal="25dp"
                    android:paddingVertical="7dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/bmi_suggestion_main_card"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="19dp"
                android:src="@drawable/help2"
                android:elevation="1dp"
                android:layout_marginBottom="-13dp"
                android:background="@color/transparent"
                android:layout_alignParentTop="true"/>
            <LinearLayout
                android:id="@+id/bmi_suggestion_text_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bmi_suggetion_bg"
                android:paddingHorizontal="15dp"
                android:paddingVertical="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/result_page_txt_bmi_suggestion2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="-"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/mulish"
                    android:includeFontPadding="false"
                    android:textColor="#3B258D"/>

                <Button
                    android:id="@+id/result_page_button_view_suggestion_bmi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View All Suggestions"
                    android:textSize="12sp"
                    android:fontFamily="@font/mulish"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    android:textAlignment="textEnd"
                    android:textColor="#927CFF"
                    android:drawableRight="@drawable/arrow_right1"
                    android:drawableTint="#927CFF"
                    android:background="@color/transparent"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>