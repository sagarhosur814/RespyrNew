<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".authentication.profile_creation.medical_data.Diabetic">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/user_profile_create_progress5"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp"
                        android:paddingHorizontal="26dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:text="MEDICAL HISTORY"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/_10sdp" />
                            <include layout="@layout/user_profile_dots"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:text="Whatâ€™s your fasting sugar level ?"
                            android:layout_marginTop="@dimen/_37sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/mulish"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_10sdp"
                            android:text="This is used to get accurate health status" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="@dimen/_56sdp"
                        android:layout_weight="1">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_card1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" &lt; 100 mg dl"
                                android:gravity="start|center"
                                android:includeFontPadding="false"
                                android:textSize="@dimen/_12sdp"
                                android:paddingVertical="@dimen/_18sdp"
                                android:drawableStart="@drawable/radio_active"
                                android:drawablePadding="@dimen/_12sdp"
                                android:paddingHorizontal="@dimen/_12sdp"
                                android:background="@drawable/blood_test_card_active"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_semibold"/>


                            <TextView
                                android:id="@+id/txt_card2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Between 100 - 126 mg dl"
                                android:gravity="start|center"
                                android:includeFontPadding="false"
                                android:textSize="@dimen/_12sdp"
                                android:paddingVertical="@dimen/_18sdp"
                                android:drawableStart="@drawable/radio_inactive"
                                android:drawablePadding="@dimen/_12sdp"
                                android:paddingHorizontal="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/blood_test_card_inactive"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_semibold"/>


                            <TextView
                                android:id="@+id/txt_card3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Between 126 - 140 mg dl"
                                android:gravity="start|center"
                                android:includeFontPadding="false"
                                android:textSize="@dimen/_12sdp"
                                android:paddingVertical="@dimen/_18sdp"
                                android:drawableStart="@drawable/radio_inactive"
                                android:drawablePadding="@dimen/_12sdp"
                                android:paddingHorizontal="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/blood_test_card_inactive"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_semibold"/>
                            <TextView
                                android:id="@+id/txt_card4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Between 140 - 200 mg dl"
                                android:gravity="start|center"
                                android:includeFontPadding="false"
                                android:textSize="@dimen/_12sdp"
                                android:paddingVertical="@dimen/_18sdp"
                                android:drawableStart="@drawable/radio_inactive"
                                android:drawablePadding="@dimen/_12sdp"
                                android:paddingHorizontal="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/blood_test_card_inactive"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_semibold"/>
                            <TextView
                                android:id="@+id/txt_card5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" &gt; 200 mg dl"
                                android:gravity="start|center"
                                android:includeFontPadding="false"
                                android:textSize="@dimen/_12sdp"
                                android:paddingVertical="@dimen/_18sdp"
                                android:drawableStart="@drawable/radio_inactive"
                                android:drawablePadding="@dimen/_12sdp"
                                android:paddingHorizontal="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/blood_test_card_inactive"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_semibold"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E4F0FF"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        android:layout_height="@dimen/_60sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="start|center"
            android:layout_height="match_parent"
            android:paddingHorizontal="13dp">
            <Button
                android:id="@+id/button_back"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_40sdp"
                android:includeFontPadding="false"
                android:text="Back"
                android:paddingHorizontal="22dp"
                android:drawableStart="@drawable/ic_back"
                android:drawableTint="@color/black"
                android:elevation="0dp"
                android:fontFamily="@font/mulish_semibold"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:background="@color/transparent"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/button_next"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/button_small_1"
                android:drawableRight="@drawable/ic_next"
                android:drawableTint="@color/white"
                android:elevation="0dp"
                android:fontFamily="@font/mulish_semibold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:includeFontPadding="false"
                android:paddingHorizontal="22dp"
                android:text="Next" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>