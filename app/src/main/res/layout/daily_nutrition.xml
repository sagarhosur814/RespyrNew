<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="20dp"
    android:layout_marginTop="56dp"
    android:id="@+id/nutrition_layout"
    android:paddingHorizontal="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Nutrition ANALYSIS"
        android:layout_centerVertical="true"
        android:textAllCaps="true"
        android:layout_alignParentStart="true"
        android:includeFontPadding="false"
        android:textColor="@color/primary"
        android:textSize="@dimen/_10sdp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="What did you eat?"
            android:layout_marginTop="30dp"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish"
            android:text="Track your daily routine to keep up with your lifestyle score including insights &amp; suggestions to improve"
            android:layout_marginTop="10dp"
            android:includeFontPadding="false"
            android:textColor="@color/grey"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:orientation="vertical"
        android:background="@drawable/nutrition_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="13dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Meals Added "
                android:fontFamily="@font/poppins_semibold"
                android:includeFontPadding="false"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/button_add_meal"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="Add Meal"
                android:drawableStart="@drawable/add"
                android:drawablePadding="15dp"
                android:textSize="@dimen/_10sdp"
                android:textAllCaps="false"
                android:fontFamily="@font/mulish"
                android:textColor="@color/white"
                android:background="@drawable/rectangle_rad10"
                android:backgroundTint="@color/primary"
                android:paddingHorizontal="15sp"/>
            <Space
                android:layout_width="5dp"
                android:layout_height="0dp"/>
            <Button
                android:id="@+id/button_clear"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="Clear"
                android:textSize="12sp"
                android:visibility="gone"
                android:textAllCaps="false"
                android:fontFamily="@font/mulish"
                android:textColor="@color/white"
                android:background="@drawable/rectangle_rad10"
                android:backgroundTint="@color/red"
                android:paddingHorizontal="15sp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E4F0FF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:orientation="vertical"
            android:paddingVertical="20dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_added_food_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/empty_list_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add a meal"
                    android:fontFamily="@font/poppins_semibold"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/grey"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food is essential to maintain your lifestyle. "
                    android:fontFamily="@font/mulish"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/_8sdp"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/grey"/>
            </LinearLayout>
        </LinearLayout>





    </LinearLayout>
</LinearLayout>