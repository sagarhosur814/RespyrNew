<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".authentication.Welcome"
    tools:ignore="PrivateResource">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:paddingHorizontal="@dimen/_13sdp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/respyr_logo"/>
    </LinearLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/slideViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:id="@+id/indicator_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_45sdp"
        android:layout_gravity="center"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_11sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/skipButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/transparent"
                android:layout_alignParentStart="true"
                android:drawableTint="#252525"
                android:textColor="#252525"
                android:textAllCaps="false"
                android:drawableEnd="@drawable/arrow_right1"
                android:fontFamily="@font/mulish"
                android:textSize="@dimen/_10sdp"
                android:text="Skip" />

            <Button
                android:id="@+id/nextButton"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/eclips1"
                android:backgroundTint="@color/primary"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="@font/mulish"
                android:textSize="@dimen/_10sdp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

    </LinearLayout>








</LinearLayout>