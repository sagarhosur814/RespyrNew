<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="66dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:includeFontPadding="false"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:text="Work-out"/>

            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/yoga"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="These work-out suggestions are based your overall health score along with your lifestyle, nutrition &amp; BMI score."
            android:includeFontPadding="false"
            android:textColor="@color/grey"
            android:gravity="start"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/mulish"
            android:textAllCaps="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your total workout time"
            android:includeFontPadding="false"
            android:textColor="#A1A1A1"
            android:gravity="start"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_semibold"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/txt_workout_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:includeFontPadding="false"
            android:textColor="#927CFF"
            android:gravity="start"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:textAllCaps="false"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/workout_suggestion_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </LinearLayout>
</LinearLayout>