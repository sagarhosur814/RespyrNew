<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reward.AllTasks"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="All Tasks"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:includeFontPadding="false"/>
                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/close"
                    android:background="@color/transparent"
                    app:tint="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ACTIVE"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="12sp"
                        android:textColor="@color/primary"
                        android:includeFontPadding="false"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/reactangle_outline_15">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7 times. 7 days."
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:includeFontPadding="false"/>
                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Take atleast one test for 7 days"
                                android:fontFamily="@font/mulish"
                                android:textSize="12sp"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/black"
                                android:includeFontPadding="false"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3/7"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textSize="25sp"
                                    android:textColor="@color/black"
                                    android:includeFontPadding="false"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/mulish_light"
                                    android:includeFontPadding="false"
                                    android:text="Tests Completed"
                                    android:textColor="@color/black"
                                    android:textSize="10sp" />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">
                                    <View
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:background="@drawable/eclips1"
                                        android:backgroundTint="#3FAF58"/>
                                    <Space
                                        android:layout_width="4dp"
                                        android:layout_height="0dp"/>
                                    <View
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:background="@drawable/eclips1"
                                        android:backgroundTint="#3FAF58"/>
                                    <Space
                                        android:layout_width="4dp"
                                        android:layout_height="0dp"/>
                                    <View
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:background="@drawable/eclips1"
                                        android:backgroundTint="#3FAF58"/>
                                    <Space
                                        android:layout_width="4dp"
                                        android:layout_height="0dp"/>
                                    <View
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:background="@drawable/eclips1"
                                        android:backgroundTint="#E6E6E6"/>
                                    <Space
                                        android:layout_width="4dp"
                                        android:layout_height="0dp"/>
                                    <View
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:background="@drawable/eclips1"
                                        android:backgroundTint="#E6E6E6"/>
                                    <Space
                                        android:layout_width="4dp"
                                        android:layout_height="0dp"/>
                                    <View
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:background="@drawable/eclips1"
                                        android:backgroundTint="#E6E6E6"/>
                                    <Space
                                        android:layout_width="4dp"
                                        android:layout_height="0dp"/>
                                    <View
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        android:background="@drawable/eclips1"
                                        android:backgroundTint="#E6E6E6"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOCKED"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="12sp"
                        android:textColor="@color/primary"
                        android:includeFontPadding="false"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="New task unlock when active task gets completed"
                        android:paddingVertical="17.5dp"
                        android:paddingHorizontal="16dp"
                        android:background="@drawable/rectange_rad15"
                        android:backgroundTint="#E4F0FF"
                        android:layout_marginTop="15dp"
                        android:drawableStart="@drawable/info_sm1"
                        android:drawablePadding="10dp"
                        android:textSize="12sp"
                        android:gravity="start|center"
                        android:fontFamily="@font/mulish"
                        android:textColor="#308BF9"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rc_locked_task_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:layout_marginTop="10dp"/>


                    <Button
                        android:id="@+id/button_locked_task_view_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View More"
                        android:textAllCaps="false"
                        android:drawableStart="@drawable/arrow_down"
                        android:drawablePadding="15dp"
                        android:fontFamily="@font/mulish"
                        android:textSize="12sp"
                        android:drawableTint="#535359"
                        android:textColor="#535359"
                        android:background="@color/transparent"
                        android:layout_gravity="center"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rc_locked_task_list2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>