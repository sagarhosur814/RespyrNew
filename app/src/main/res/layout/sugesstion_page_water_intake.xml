<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="66dp"
    android:paddingHorizontal="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:includeFontPadding="false"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:text="Water Intake"/>

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/water1"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mulish"
        android:includeFontPadding="false"
        android:textSize="12sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:text="Suggestion is based your daily water intake along with your overall health score, clinical, lifestyle &amp; BMI score."/>


    <RelativeLayout
        android:layout_width="306dp"
        android:layout_height="306dp"
        android:background="@drawable/eclips1"
        android:layout_gravity="center"
        android:layout_marginTop="31dp"
        android:backgroundTint="@color/disabled">

        <com.yangp.ypwaveview.YPWaveView
            android:id="@+id/progress_water_intake"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:animatorEnable="false"
            app:behideColor="#308BF9"
            app:borderColor="#0000"
            app:borderWidthSize="0dp"
            app:frontColor="#87BDFF"
            app:shapePadding="0dp"
            app:shapeType="circle"
            app:textHidden="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/recommended_water_in_take"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:includeFontPadding="false"
                    android:textSize="18sp"
                    android:textColor="@color/primary"
                    android:text="+ 4 glasses"/>
                <TextView
                    android:id="@+id/recommended_water_in_take_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulish"
                    android:includeFontPadding="false"
                    android:textSize="12sp"
                    android:textColor="#0B4081"
                    android:text="(3 liters)"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="82dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulish"
                    android:includeFontPadding="false"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="Water Intake"/>
                <TextView
                    android:id="@+id/txt_water_intake_in_glass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:includeFontPadding="false"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="12 glasses"/>
                <TextView
                    android:id="@+id/txt_water_intake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulish"
                    android:includeFontPadding="false"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="(3 liters)"/>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/txt_water_consumption_suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:includeFontPadding="false"
        android:textSize="18dp"
        android:maxWidth="330dp"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:textColor="@color/grey"/>
</LinearLayout>