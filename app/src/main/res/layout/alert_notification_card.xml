<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/notification_card"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:paddingHorizontal="9dp"
    android:paddingVertical="10dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"/>

        <TextView
            android:id="@+id/txt_alert_notification_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="REMINDER"
            android:textAllCaps="true"
            android:includeFontPadding="false"
            android:textColor="@color/grey"
            android:textSize="11sp"
            android:fontFamily="@font/roboto"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_alert_notification_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Aug 2022"
                android:textColor="@color/grey"
                android:textSize="11sp"
                android:includeFontPadding="false"
                android:fontFamily="@font/roboto"/>
            <View
                android:layout_width="1dp"
                android:layout_height="11dp"
                android:layout_marginHorizontal="5dp"
                android:background="@color/grey"/>
            <TextView
                android:id="@+id/txt_alert_notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:42 pm"
                android:textColor="@color/grey"
                android:textSize="11sp"
                android:includeFontPadding="false"
                android:fontFamily="@font/roboto"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_alert_notification_main_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:includeFontPadding="false"
                android:textSize="15sp"
                android:text="Time To Take Daily Reading!"
                />
            <TextView
                android:id="@+id/txt_alert_notification_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/mulish"
                android:textSize="11sp"
                android:maxLength="60"
                android:layout_marginTop="8dp"
                android:includeFontPadding="false"
                android:text="Lorem ipsum dolor sit amet consectetur. Faucibus dolor nec viverra scelerisque at. "/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_notification_new"
                android:layout_width="46dp"
                android:layout_height="17dp"
                android:gravity="center"
                android:background="@drawable/eclips1"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/white"
                android:text="New"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>