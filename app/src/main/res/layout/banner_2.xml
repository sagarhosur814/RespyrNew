<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="23dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_marginHorizontal="14dp"
        android:backgroundTint="#252525"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingVertical="25dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/rectange_rad15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FREE"
            android:fontFamily="@font/roboto"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:includeFontPadding="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5/10"
            android:fontFamily="@font/roboto_bold"
            android:textSize="25sp"
            android:layout_marginTop="7.5dp"
            android:textColor="@color/white"
            android:includeFontPadding="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="readings remaining"
            android:fontFamily="@font/mulish"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:drawableEnd="@drawable/info_sm"
            android:drawablePadding="7dp"
            android:includeFontPadding="false"
            android:textColor="@color/white"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="116dp"
            android:layout_height="37dp"
            android:text="Try Premium"
            android:includeFontPadding="false"
            android:textSize="12dp"
            android:paddingHorizontal="11dp"
            android:background="@drawable/premium_button1"
            android:drawableStart="@drawable/premium_sm1"
            android:textAllCaps="false"
            android:textColor="#FBB03B"
            android:fontFamily="@font/mulish"/>

    </LinearLayout>
    
    <ImageView
        android:layout_width="153dp"
        android:layout_height="200dp"
        android:src="@drawable/balloons"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>