<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".suggestion.Suggestion"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingHorizontal="20dp"
        android:background="#927CFF"
        android:gravity="center">
        <ImageButton
            android:id="@+id/img_button_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/back"
            android:background="@color/transparent"
            app:tint="@color/white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:fontFamily="@font/poppins_semibold"
            android:includeFontPadding="false"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="Suggestions"/>
        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/back"
            android:visibility="invisible"
            android:background="@color/transparent"
            app:tint="@color/white"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="109dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingHorizontal="20dp"
                android:gravity="center"
                android:background="@drawable/gradient_header_suggestion">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:includeFontPadding="false"
                        android:textSize="25sp"
                        android:textColor="#3B258D"
                        android:text="Today\nSuggestions"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulish"
                        android:includeFontPadding="false"
                        android:textSize="12sp"
                        android:layout_marginTop="10dp"
                        android:textColor="#3B258D"
                        android:text="We have generated suggestions based on your overall result. Check it out!"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/wheel"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:includeFontPadding="false"
                        android:textSize="25sp"
                        android:textColor="@color/black"
                        android:text="Food Intake"/>

                    <ImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/food"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mulish"
                    android:includeFontPadding="false"
                    android:textSize="12sp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"
                    android:text="These food intake suggestions are based your overall health score along with your clinical, lifestyle &amp; BMI score."/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:layout_marginTop="33dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:includeFontPadding="false"
                        android:textSize="15sp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/grey"
                        android:text="Breakfast"
                        app:drawableStartCompat="@drawable/morning_sm" />
                    <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
                        android:id="@+id/indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:spi_dotColor="@color/disabled"
                        app:spi_dotSelectedColor="#3B258D"   />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/breakfast_suggestion_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="43dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:includeFontPadding="false"
                        android:textSize="15sp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/grey"
                        android:text="Lunch"
                        app:drawableStartCompat="@drawable/afternoon_sm" />
                    <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
                        android:id="@+id/lunch_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:spi_dotColor="@color/disabled"
                        app:spi_dotSelectedColor="#3B258D"   />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/lunch_suggestion_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="43dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="20dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:includeFontPadding="false"
                        android:textSize="15sp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/grey"
                        android:text="Dinner"
                        app:drawableStartCompat="@drawable/night_sm" />
                    <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
                        android:id="@+id/dinner_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:spi_dotColor="@color/disabled"
                        app:spi_dotSelectedColor="#3B258D"   />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/dinner_suggestion_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/suggestion_page_workouts"/>
            <include layout="@layout/sugesstion_page_water_intake"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>