<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_5sdp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_score_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health Score"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/black"
            android:includeFontPadding="false"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_18sdp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_score_status_in_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5%"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/black"
                    android:includeFontPadding="false"/>
                <TextView
                    android:id="@+id/txt_score_average_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Than Yesterday"
                    android:fontFamily="@font/mulish"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginTop="5dp"
                    android:textColor="#A1A1A1"
                    android:includeFontPadding="false"
                    tools:ignore="SmallSp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_score_status_in_average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="86%"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/black"
                    android:includeFontPadding="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Average Score (Daily)"
                    android:fontFamily="@font/mulish"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginTop="5dp"
                    android:textColor="#A1A1A1"
                    android:includeFontPadding="false"
                    tools:ignore="SmallSp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <WebView
        android:id="@+id/chartWebView"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_height="209dp"
        android:background="@color/red"
        tools:ignore="WebViewLayout" />
</LinearLayout>