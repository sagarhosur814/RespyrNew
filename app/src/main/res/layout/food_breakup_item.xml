<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:id="@+id/food_breakup_image_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/food_image_not_found"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="start|center"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/food_breakup_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:paddingHorizontal="12sp"
                android:gravity="center|start"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_semibold"
                android:includeFontPadding="false"
                android:textColor="@color/grey"/>
            <TextView
                android:id="@+id/food_breakup_quantity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:paddingHorizontal="12sp"
                android:gravity="center|start"
                android:textSize="10sp"
                android:fontFamily="@font/mulish"
                android:includeFontPadding="false"
                android:textColor="@color/grey"/>
        </LinearLayout>
        <TextView
            android:id="@+id/food_breakup_calories_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:paddingHorizontal="12sp"
            android:gravity="center|start"
            android:textSize="15sp"
            android:fontFamily="@font/roboto"
            android:includeFontPadding="false"
            android:textColor="@color/grey"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="#E4F0FF"/>
</LinearLayout>