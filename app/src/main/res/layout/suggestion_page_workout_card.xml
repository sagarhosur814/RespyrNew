<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="282dp"
    android:layout_height="282dp"
    android:background="@drawable/deafult_workout"
    android:gravity="bottom"
    android:layout_marginLeft="20dp"
    android:orientation="vertical"
    android:id="@+id/layout_work_out_number">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/workout_card_footer"
        android:backgroundTint="#A5AEFF"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_work_out_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modified Push-ups"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            android:includeFontPadding="false"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/txt_work_out_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18 minutes"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto"
            android:includeFontPadding="false"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>